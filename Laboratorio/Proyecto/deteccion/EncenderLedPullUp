// Pines
const int botonPin = 2;     // Pin del bot贸n
const int ledPin = 13;      // Pin del LED
int estadoBoton = 0;        // Variable para guardar el estado del bot贸n

void setup() {
  pinMode(ledPin, OUTPUT);        // LED como salida
  pinMode(botonPin, INPUT_PULLUP); // Bot贸n como entrada con resistencia interna
}

void loop() {
  // Leer el estado del bot贸n
  estadoBoton = digitalRead(botonPin);

  // Como usamos INPUT_PULLUP: LOW = presionado, HIGH = no presionado
  if (estadoBoton == LOW) {
    digitalWrite(ledPin, HIGH);   // Encender LED
  } else {
    digitalWrite(ledPin, LOW);    // Apagar LED
  }
}
